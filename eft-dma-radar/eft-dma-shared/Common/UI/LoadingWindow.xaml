<Window x:Class="eft_dma_shared.Common.UI.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Loading" 
        Height="160" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        Topmost="True" 
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Effect>
        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3" Color="Black"/>
    </Window.Effect>

    <Border CornerRadius="10" Background="#222222" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#333333" CornerRadius="10,10,0,0" Height="25">
                <TextBlock Text="EFT DMA Radar" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </Border>

            <!-- Loading content -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="400"
                        Margin="0,0,0,0">

                <!-- Circle Progress Bar -->
                <!--<hc:CircleProgressBar x:Name="CircleProgress"
                                   Value="0"
                                   Width="80"
                                   Height="80"
                                   ArcThickness="8"
                                   Foreground="#0094FF"
                                   Margin="0,0,0,30"/>-->

                <TextBlock x:Name="LabelProgressText" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <ProgressBar x:Name="LoadingProgressBar" 
                             Height="15" 
                             Value="0"
                             Foreground="#0094FF" 
                             Background="#333333" 
                             BorderBrush="#444444"/>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                <TextBlock Text="Powered by " 
                           Foreground="#999999" 
                           FontSize="12"/>
                <TextBlock>
                    <Hyperlink x:Name="githubLink"
                               RequestNavigate="githubLink_RequestNavigate"
                               TextDecorations="None">
                        <TextBlock Text="lone-dma" 
                                   Foreground="#0094FF" 
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>