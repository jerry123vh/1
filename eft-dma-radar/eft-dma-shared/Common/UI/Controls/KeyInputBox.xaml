<UserControl x:Class="eft_dma_shared.Common.UI.Controls.KeyInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:eft_dma_shared.Common.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="36" d:DesignWidth="140">

    <Border x:Name="MainBorder"
            CornerRadius="6"
            Cursor="Hand"
            SnapsToDevicePixels="True"
            Height="36">

        <!-- Border Style -->
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource RegionBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Style.Triggers>
                    <!-- Hover -->
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource RegionBrush}" />
                        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorderBrush}" />
                    </Trigger>

                    <!-- Focus -->
                    <DataTrigger Binding="{Binding ElementName=HiddenTextBox, Path=IsFocused}" Value="True">
                        <Setter Property="Background" Value="{DynamicResource RegionBrush}" />
                        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid Margin="4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SecondaryBrush}"
                    Width="24" Height="24"
                    Margin="6,0"
                    VerticalAlignment="Center"
                    CornerRadius="4">
                <TextBlock Text="⌨"
                           Foreground="White"
                           FontSize="14"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Text -->
            <TextBlock x:Name="DisplayText"
                       Grid.Column="1"
                       Text="Press Any Key"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="6,0"
                       TextTrimming="CharacterEllipsis" />

            <!-- Clear Button -->
            <Button x:Name="ClearButton"
                    Grid.Column="2"
                    Width="18" Height="18"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Visibility="Collapsed"
                    Margin="0,0,6,0"
                    ToolTip="Clear"
                    Click="ClearButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="9"
                                            Width="18" Height="18">
                                        <Path Data="M 4,4 L 14,14 M 14,4 L 4,14"
                                              Stroke="{DynamicResource PrimaryTextBrush}"
                                              StrokeThickness="1.5"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
                                            
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Hidden TextBox -->
            <TextBox x:Name="HiddenTextBox"
                     Grid.Column="0" Grid.ColumnSpan="3"
                     Opacity="0"
                     IsHitTestVisible="False"
                     Focusable="True"
                     Background="Transparent"
                     BorderThickness="0"/>
        </Grid>
    </Border>
</UserControl>